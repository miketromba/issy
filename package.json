{
  "name": "issy-monorepo",
  "private": true,
  "packageManager": "bun@1.3.8",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/miketromba/issy.git"
  },
  "bugs": {
    "url": "https://github.com/miketromba/issy/issues"
  },
  "homepage": "https://github.com/miketromba/issy#readme",
