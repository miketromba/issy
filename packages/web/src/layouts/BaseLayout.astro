---
import "../styles/global.css";

interface Props {
	title: string;
	description: string;
	ogImage?: string;
	canonicalUrl?: string;
}

const { title, description, ogImage = "/og-image.png", canonicalUrl } = Astro.props;
const canonical = canonicalUrl || Astro.url.href;
const fullTitle = title === "issy" ? "issy — AI-native issue tracking" : `${title} — issy`;
---

<!doctype html>
<html lang="en" class="antialiased">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="canonical" href={canonical} />

		<title>{fullTitle}</title>
		<meta name="description" content={description} />
		<meta name="theme-color" content="#0a0b0f" />

		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonical} />
		<meta property="og:title" content={fullTitle} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(ogImage, Astro.site)} />
		<meta property="og:site_name" content="issy" />

		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={fullTitle} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={new URL(ogImage, Astro.site)} />

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;500&display=swap"
			rel="stylesheet"
		/>

		<script is:inline type="application/ld+json" set:html={JSON.stringify({
			"@context": "https://schema.org",
			"@type": "SoftwareApplication",
			"name": "issy",
			"description": "AI-native issue tracking. Markdown files managed by your coding assistant.",
			"url": "https://issy.sh",
			"applicationCategory": "DeveloperApplication",
			"operatingSystem": "macOS, Linux, Windows",
			"license": "https://github.com/miketromba/issy/blob/main/LICENSE",
			"offers": { "@type": "Offer", "price": "0", "priceCurrency": "USD" },
		})} />
	</head>
	<body class="min-h-screen bg-bg text-text">
		<slot />
	</body>
</html>
