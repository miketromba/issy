{
  "name": "issy",
  "version": "0.1.4",
  "description": "AI-native issue tracking. Markdown files in .issues/, managed by your coding assistant.",
  "type": "module",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/miketromba/issy.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/miketromba/issy/issues"
  },
  "homepage": "https://github.com/miketromba/issy#readme",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "issy": "bin/issy"
  },
  "files": [
    "bin",
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "bun build src/cli.ts --outdir dist --target node --format esm --external @miketromba/issy-app",
    "prepublishOnly": "bun run build",
    "cli": "bun src/cli.ts",
    "lint": "biome check src bin"
  },
  "dependencies": {
    "@miketromba/issy-app": "^0.1.4",
    "@miketromba/issy-core": "^0.1.4"
  }
}
